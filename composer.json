{
    "name": "flow-control/react-inotify",
    "description": "Event-driven inotify streams for non-blocking I/O in ReactPHP",
    "keywords": ["event-driven", "inotify", "non-blocking", "ReactPHP"],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-inotify": "*",
        "react/event-loop": "^1",
        "evenement/evenement": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.3",
        "phpstan/phpstan": "^0.12.44",
        "infection/infection": "^0.13.0|^0.14.0|^0.15.0|^0.16.0|^0.17.0",
        "vimeo/psalm": "^3.16"
    },
    "autoload": {
        "psr-4": {
            "Flowcontrol\\React\\Inotify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flowcontrol\\React\\Inotify\\Tests\\": "tests"
        }
    },
    "scripts": {
        "fix": "./tools/phpcbf --standard=PSR12 --extensions=php -p src/ tests/ examples/",
        "test:lint": "./tools/phpcs --standard=PSR12 --extensions=php -p src/ tests/ examples/",
        "test:phpstan": "./vendor/bin/phpstan analyse --level max examples/ src/",
        "test:psalm": "./vendor/bin/psalm src/ examples/",
        "test:unit": "./vendor/bin/phpunit",
        "test:mutation": "./vendor/bin/infection --min-msi=60 --no-interaction --no-ansi --no-progress",
        "test": [
            "@test:lint",
            "@test:phpstan",
            "@test:psalm",
            "@test:unit",
            "@test:mutation"
        ]
    }
}
