{
    "name": "flow-control/react-inotify",
    "description": "Event-driven inotify streams for non-blocking I/O in ReactPHP",
    "keywords": ["event-driven", "inotify", "non-blocking", "ReactPHP"],
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "ext-inotify": "*",
        "react/event-loop": "^1",
        "evenement/evenement": "^3"
    },
    "autoload": {
        "psr-4": {
            "Flowcontrol\\React\\Inotify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flowcontrol\\React\\Inotify\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "phpstan/phpstan": "^0.11.6",
        "squizlabs/php_codesniffer": "^3.4",
        "nunomaduro/phpinsights": "^1.3"
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR2 examples/ src/ tests/",
        "phpstan": "phpstan analyse --level max examples/ src/ tests/",
        "phpinsights": "phpinsights",
        "phpunit": "phpunit",
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpinsights",
            "@phpunit"
        ]
    }
}
