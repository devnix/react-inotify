{
    "name": "flow-control/react-inotify",
    "description": "Event-driven inotify streams for non-blocking I/O in ReactPHP",
    "keywords": ["event-driven", "inotify", "non-blocking", "ReactPHP"],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-inotify": "*",
        "react/event-loop": "^1",
        "evenement/evenement": "^3"
    },
    "autoload": {
        "psr-4": {
            "Flowcontrol\\React\\Inotify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flowcontrol\\React\\Inotify\\Tests\\": "tests"
        }
    },
    "scripts": {
        "fix": "./tools/phpcbf --standard=PSR12 --extensions=php -p src/ tests/ examples/",
        "test:lint": "./tools/phpcs --standard=PSR12 --extensions=php -p src/ tests/ examples/",
        "test:phpstan": "./tools/phpstan analyse -c phpstan.neon --level max examples/ src/",
        "test:psalm": "./tools/psalm src/ examples/",
        "test:unit": "./tools/phpunit",
        "test:mutation": "./tools/infection --min-msi=60 --no-interaction --no-ansi --no-progress",
        "test": [
            "@test:lint",
            "@test:phpstan",
            "@test:psalm",
            "@test:unit",
            "@test:mutation"
        ]
    }
}
