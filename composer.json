{
    "name": "flow-control/react-inotify",
    "description": "Event-driven inotify streams for non-blocking I/O in ReactPHP",
    "keywords": ["event-driven", "inotify", "non-blocking", "ReactPHP"],
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "ext-inotify": "*",
        "react/event-loop": "^1",
        "evenement/evenement": "^3"
    },
    "autoload": {
        "psr-4": {
            "Flowcontrol\\React\\Inotify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flowcontrol\\React\\Inotify\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcsfix-test": "./tools/php-cs-fixer fix --config .php_cs.dist --dry-run",
        "phpcsfix": "./tools/php-cs-fixer fix --config .php_cs.dist",
        "phpstan": "./tools/phpstan analyse --level max examples/ src/",
        "psalm": "./tools/psalm src/ examples/",
        "phpunit": "./tools/phpunit",
        "test": [
            "@phpcsfix",
            "@phpstan",
            "@psalm",
            "@phpunit"
        ]
    }
}
